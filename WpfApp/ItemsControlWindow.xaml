<Window x:Class="WpfApp.ItemsControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="ItemsControlWindow" Height="450" Width="800">
    <Grid>

        <TabControl SelectedIndex="2" TabStripPlacement="Left" BorderThickness="10" BorderBrush="Pink">
            <TabItem >
                <TabItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="16" Height="16" Fill="Red"/>
                    <Label Content="ContentControl"/>
                </StackPanel>
                </TabItem.Header>
            </TabItem>

            <TabItem Header="ListBox"></TabItem>
            <TabItem Header="ListView"></TabItem>
            <TabItem Header="DataGrid"></TabItem>

        </TabControl>
        
    </Grid>
</Window>
